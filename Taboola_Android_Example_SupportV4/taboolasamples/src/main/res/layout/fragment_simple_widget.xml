<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:taboola="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/lorem_ipsum_short" />

        <com.taboola.android.TaboolaWidget
            android:id="@+id/taboola_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            taboola:tb_mode="alternating-widget-without-video-1x4"
            taboola:tb_page_type="article"
            taboola:tb_placement="Below Article"
            taboola:tb_publisher="sdk-tester-demo"
            taboola:tb_target_type="mix"
            taboola:tb_url="https://blog.taboola.com" />

    </LinearLayout>

</ScrollView>

